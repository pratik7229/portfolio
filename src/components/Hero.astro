<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    overflow: hidden;
    background: #151726;
    padding-top: 80px; /* For fixed header */
  }

  .video-background {
    position: absolute;
    top: 0;
    right: 0;
    width: 70%;
    height: 100%;
    z-index: 1;
  }

  .background-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    filter: brightness(0.8) contrast(1.1);
    transition: opacity 1s ease-in-out;
  }

  .video-blend {
    position: absolute;
    top: 0;
    left: 0;
    width: 30%;
    height: 100%;
    background: linear-gradient(
      to right,
      rgba(21, 23, 38, 1) 0%,
      rgba(21, 23, 38, 0.8) 50%,
      transparent 100%
    );
  }

  .hero-container {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    width: 100%;
  }

  .hero-content {
    max-width: 500px;
    text-align: left;
    margin: 0;
  }

  .hero-title {
    font-size: clamp(2rem, 6vw, 3.5rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, #ffffff 0%, #e2e8f0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: clamp(1.125rem, 3vw, 1.1rem);
    color: #cbd5e1;
    margin-bottom: 2.5rem;
    line-height: 1.6;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: flex-start;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    border-radius: 0.75rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    border: 2px solid transparent;
    font-size: 1rem;
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(10px);
  }

  .btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.6s ease;
  }

  .btn:hover::before {
    left: 100%;
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--accent) 0%, #2563eb 50%, #8b5cf6 100%);
    background-size: 200% 200%;
    color: white;
    border: 2px solid rgba(59, 130, 246, 0.5);
    box-shadow: 
      0 4px 15px rgba(59, 130, 246, 0.4),
      0 0 0 1px rgba(255, 255, 255, 0.1) inset,
      0 0 20px rgba(59, 130, 246, 0.2) inset;
    animation: gradientShift 3s ease infinite;
  }

  .btn-primary:hover {
    background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 50%, #7c3aed 100%);
    background-size: 200% 200%;
    transform: translateY(-3px) scale(1.05);
    box-shadow: 
      0 8px 25px rgba(59, 130, 246, 0.6),
      0 0 0 1px rgba(255, 255, 255, 0.2) inset,
      0 0 30px rgba(59, 130, 246, 0.3) inset;
  }

  .btn-outline {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
    color: white;
    border: 2px solid rgba(255, 255, 255, 0.3);
    box-shadow: 
      0 4px 15px rgba(0, 0, 0, 0.2),
      0 0 0 1px rgba(255, 255, 255, 0.1) inset;
    position: relative;
  }

  .btn-outline::after {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.4), transparent, rgba(255, 255, 255, 0.4));
    border-radius: 0.75rem;
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .btn-outline:hover {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.15) 0%, rgba(255, 255, 255, 0.08) 100%);
    border-color: rgba(255, 255, 255, 0.5);
    transform: translateY(-3px) scale(1.05);
    box-shadow: 
      0 8px 25px rgba(255, 255, 255, 0.2),
      0 0 0 1px rgba(255, 255, 255, 0.3) inset;
  }

  .btn-outline:hover::after {
    opacity: 1;
  }

  /* Download icon for resume button */
  .btn-outline::before {
    content: 'ðŸ“¥';
    font-size: 1.1em;
  }

  /* Social Links Styles */
  .social-links {
    display: flex;
    gap: 1.5rem;
    align-items: center;
    flex-wrap: wrap;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #cbd5e1;
    text-decoration: none;
    transition: all 0.3s ease;
    padding: 0.5rem;
    border-radius: 0.375rem;
  }

  .social-link:hover {
    color: var(--accent);
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-2px);
  }

  .social-icon {
    width: 1.5rem;
    height: 1.5rem;
    transition: all 0.3s ease;
  }

  .social-link:hover .social-icon {
    transform: scale(1.1);
  }

  .social-link span {
    font-size: 0.9rem;
    font-weight: 500;
  }

  /* Animations */
  @keyframes gradientShift {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .video-background {
      width: 100%;
      right: 0;
    }
    
    .video-blend {
      width: 100%;
      background: linear-gradient(
        to bottom,
        transparent 0%,
        rgba(21, 23, 38, 0.8) 50%,
        rgba(21, 23, 38, 1) 100%
      );
    }
    
    .hero-content {
      max-width: 100%;
      text-align: center;
    }
    
    .hero-actions {
      justify-content: center;
    }
    
    .social-links {
      justify-content: center;
      gap: 1rem;
    }
    
    .social-link span {
      font-size: 0.8rem;
    }

    .btn {
      padding: 0.875rem 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .hero {
      min-height: 70vh;
    }

    .hero-title {
      font-size: 1.5rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }
    
    .social-links {
      flex-direction: column;
      gap: 0.75rem;
    }
    
    .social-link {
      padding: 0.375rem;
    }

    .hero-actions {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 100%;
      max-width: 250px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Video playlist functionality
    const videoElement = document.querySelector('.background-video') as HTMLVideoElement | null;
    const videoSources = [
      { mp4: '/video.mp4', webm: '/video.webm' },
      { mp4: '/video2.mp4', webm: '/video2.webm' },
      { mp4: '/video3.mp4', webm: '/video3.webm' },
      { mp4: '/video4.mp4', webm: '/video4.webm' }
    ];
    
    let currentVideoIndex = 0;

    function playNextVideo() {
      if (!videoElement) return;
      currentVideoIndex = (currentVideoIndex + 1) % videoSources.length;
      const nextVideo = videoSources[currentVideoIndex];
      
      // Fade out current video
      videoElement.style.opacity = '0';
      
      setTimeout(() => {
        if (!videoElement) return;
        // Change video source
        videoElement.innerHTML = '';
        
        const mp4Source = document.createElement('source');
        mp4Source.src = nextVideo.mp4;
        mp4Source.type = 'video/mp4';
        
        const webmSource = document.createElement('source');
        webmSource.src = nextVideo.webm;
        webmSource.type = 'video/webm';
        
        // Fallback image
        const fallbackImg = document.createElement('img');
        fallbackImg.src = '/erdc .png';
        fallbackImg.alt = 'Robotics background';
        
        videoElement.appendChild(mp4Source);
        videoElement.appendChild(webmSource);
        videoElement.appendChild(fallbackImg);
        
        // Fade in new video
        try {
          if (typeof videoElement.load === 'function') videoElement.load();
          if (typeof videoElement.play === 'function') {
            videoElement.play().catch(e => console.log('Video play failed:', e));
          }
        } catch (e) {
          console.log('Error when loading/playing video:', e);
        }
        videoElement.style.opacity = '1';
      }, 1000);
    }

    // Listen for video end and play next
    if (videoElement) {
      videoElement.addEventListener('ended', playNextVideo);
      
      // Also set up error handling
      videoElement.addEventListener('error', (e) => {
        console.log('Video error, playing next:', e);
        setTimeout(playNextVideo, 2000);
      });
    }

    // Smooth scroll for View My Work button
    const viewWorkBtn = document.querySelector('a[href="#projects"]');
    if (viewWorkBtn) {
      viewWorkBtn.addEventListener('click', (e) => {
      e.preventDefault();
      const projectsSection = document.querySelector('#projects') as HTMLElement | null;
      if (projectsSection) {
        const headerEl = document.querySelector('.header') as HTMLElement | null;
        const headerHeight = headerEl?.offsetHeight ?? 80;

        // Use getBoundingClientRect for an accurate position and subtract header height
        const rect = projectsSection.getBoundingClientRect();
        const targetPosition = rect.top + window.pageYOffset - headerHeight;

        window.scrollTo({
        top: Math.max(0, Math.round(targetPosition)),
        behavior: 'smooth'
        });
      }
      });
    }

    // Download resume button enhancement
        const downloadBtn = document.querySelector('a[download]');
        if (downloadBtn) {
          downloadBtn.addEventListener('click', (e) => {
            // Add download confirmation animation
            const target = e.target as Element | null;
            const btn = target?.closest('.btn') as HTMLElement | null;
            if (btn) {
              btn.style.transform = 'scale(0.95)';
              setTimeout(() => {
                btn.style.transform = '';
              }, 150);
            }
          });
        }
  });
</script>