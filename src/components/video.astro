---
// src/pages/gallery.astro
const videos = [
  {
    id: "climbing-1",
    title: "IronMan: Bipedal Magnetic Climber",
    category: "Climbing",
    duration: "2:15",
    thumbnail: "/ironman-1.jpg", // Ensure these exist in /public or use placeholders
    videoSrc: "/CB_robot.mp4"    // Ensure this exists
  },
  {
    id: "aerial-1",
    title: "Cube Drone: Indoor Flight Test",
    category: "Aerial",
    duration: "1:45",
    thumbnail: "/cube-1.jpg",
    videoSrc: "/aerial.mp4"
  },
  {
    id: "mobile-1",
    title: "Culvert Inspection Rover",
    category: "Mobile",
    duration: "3:20",
    thumbnail: "/culvert-1.jpg",
    videoSrc: "/mobile.mp4"
  },
  {
    id: "climbing-2",
    title: "Spidey: Quadruped Wall Transition",
    category: "Climbing",
    duration: "1:10",
    thumbnail: "/spidey-1.jpg",
    videoSrc: "/climbing.mp4"
  },
  {
    id: "ai-1",
    title: "Real-time Defect Detection (YOLOv8)",
    category: "AI & Perception",
    duration: "0:50",
    thumbnail: "/ai-1.jpg",
    videoSrc: "/ai.mp4"
  },
  {
    id: "aerial-2",
    title: "Custom Flight Controller PID Tuning",
    category: "Aerial",
    duration: "4:00",
    thumbnail: "/fc-1.jpg",
    videoSrc: "/aerial.mp4"
  }
];
---

  
  <main class="gallery-page">
    
    <section class="hero-showcase">
      <div class="hero-video-bg">
        <video autoplay muted loop playsinline class="bg-video">
          <source src="/CB_robot.mp4" type="video/mp4" />
        </video>
        <div class="hero-overlay"></div>
      </div>
      
      <div class="hero-content">
        <span class="hero-tag">Featured Project</span>
        <h1 class="hero-title">Engineering in Motion</h1>
        <p class="hero-desc">Watch the deployment of autonomous climbing robots and aerial systems in real-world industrial environments.</p>
        <button class="watch-hero-btn" onclick="document.getElementById('gallery-grid').scrollIntoView({behavior: 'smooth'})">
          <span class="play-icon">▶</span> Watch Gallery
        </button>
      </div>
    </section>

    <section id="gallery-grid" class="gallery-section">
      <div class="container">
        <div class="gallery-header">
          <h2>Project Archives</h2>
          <div class="filters">
            <button class="filter-btn active" data-filter="all">All</button>
            <button class="filter-btn" data-filter="Climbing">Climbing</button>
            <button class="filter-btn" data-filter="Aerial">Aerial</button>
            <button class="filter-btn" data-filter="Mobile">Mobile</button>
          </div>
        </div>

        <div class="video-grid">
          {videos.map((vid) => (
            <div class="video-card" data-category={vid.category} onclick={`openVideoModal('${vid.videoSrc}', '${vid.title}')`}>
              <div class="card-thumb">
                <img src={vid.thumbnail} alt={vid.title} onerror="this.src='https://placehold.co/600x400/1e293b/FFF?text=Video+Thumbnail'" />
                <div class="play-overlay">
                  <div class="play-circle">
                    <svg viewBox="0 0 24 24" fill="currentColor"><path d="M8 5v14l11-7z"/></svg>
                  </div>
                </div>
                <div class="duration-badge">{vid.duration}</div>
              </div>
              <div class="card-info">
                <span class="category-tag">{vid.category}</span>
                <h3>{vid.title}</h3>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <div id="videoModal" class="video-modal">
      <div class="modal-backdrop" onclick="closeVideoModal()"></div>
      <div class="modal-container">
        <div class="modal-header">
          <h3 id="modalTitle">Video Title</h3>
          <button class="close-btn" onclick="closeVideoModal()">✕</button>
        </div>
        <div class="video-wrapper">
          <video id="mainPlayer" controls playsinline>
            <source src="" type="video/mp4" />
          </video>
        </div>
      </div>
    </div>

  </main>
</Layout>

<style>
  /* GLOBAL & RESET */
  .gallery-page {
    background: #0a0a0a;
    min-height: 100vh;
    color: white;
    font-family: 'Inter', sans-serif;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* --- HERO SECTION --- */
  .hero-showcase {
    position: relative;
    height: 85vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-video-bg {
    position: absolute;
    top: 0; left: 0; width: 100%; height: 100%;
    z-index: 0;
  }

  .bg-video {
    width: 100%; height: 100%; object-fit: cover;
    filter: brightness(0.6);
  }

  .hero-overlay {
    position: absolute; top: 0; left: 0; width: 100%; height: 100%;
    background: radial-gradient(circle at center, rgba(0,0,0,0.2) 0%, #0a0a0a 100%);
  }

  .hero-content {
    position: relative; z-index: 2; text-align: center; max-width: 800px;
    padding: 2rem;
    animation: fadeInUp 1s ease-out;
  }

  .hero-tag {
    display: inline-block;
    background: rgba(59, 130, 246, 0.2);
    border: 1px solid rgba(59, 130, 246, 0.4);
    color: #60a5fa;
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.5rem;
    backdrop-filter: blur(10px);
  }

  .hero-title {
    font-size: clamp(3rem, 6vw, 5rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    text-shadow: 0 4px 20px rgba(0,0,0,0.5);
    background: linear-gradient(to right, #fff, #94a3b8);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .hero-desc {
    font-size: 1.2rem;
    color: #e2e8f0;
    margin-bottom: 2.5rem;
    text-shadow: 0 2px 4px rgba(0,0,0,0.8);
  }

  .watch-hero-btn {
    background: white;
    color: black;
    border: none;
    padding: 1rem 2.5rem;
    font-size: 1.1rem;
    font-weight: 700;
    border-radius: 3rem;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .watch-hero-btn:hover {
    transform: scale(1.05);
    box-shadow: 0 0 30px rgba(255,255,255,0.4);
  }

  /* --- GALLERY GRID --- */
  .gallery-section {
    padding: 6rem 0;
    position: relative;
    z-index: 2;
    background: #0a0a0a;
  }

  .gallery-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .gallery-header h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: white;
  }

  .filters {
    display: flex;
    gap: 1rem;
    background: rgba(255,255,255,0.05);
    padding: 0.5rem;
    border-radius: 2rem;
    border: 1px solid rgba(255,255,255,0.1);
  }

  .filter-btn {
    background: transparent;
    border: none;
    color: #94a3b8;
    padding: 0.5rem 1.5rem;
    border-radius: 1.5rem;
    cursor: pointer;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .filter-btn:hover { color: white; }
  .filter-btn.active {
    background: #3b82f6;
    color: white;
    box-shadow: 0 4px 15px rgba(59, 130, 246, 0.4);
  }

  .video-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2.5rem;
  }

  /* VIDEO CARD */
  .video-card {
    group: relative;
    background: #151726;
    border-radius: 1.5rem;
    overflow: hidden;
    cursor: pointer;
    border: 1px solid rgba(255,255,255,0.05);
    transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275), box-shadow 0.4s ease;
  }

  .video-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.6);
    border-color: rgba(59, 130, 246, 0.5);
  }

  .card-thumb {
    position: relative;
    height: 220px;
    overflow: hidden;
  }

  .card-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .video-card:hover .card-thumb img {
    transform: scale(1.1);
  }

  .play-overlay {
    position: absolute;
    top: 0; left: 0; width: 100%; height: 100%;
    background: rgba(0,0,0,0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .video-card:hover .play-overlay { opacity: 1; }

  .play-circle {
    width: 60px; height: 60px;
    background: rgba(255,255,255,0.2);
    backdrop-filter: blur(10px);
    border-radius: 50%;
    display: flex; align-items: center; justify-content: center;
    border: 2px solid white;
    transform: scale(0.8);
    transition: transform 0.3s ease;
  }

  .video-card:hover .play-circle { transform: scale(1); }

  .play-circle svg { width: 24px; height: 24px; color: white; margin-left: 4px; }

  .duration-badge {
    position: absolute; bottom: 10px; right: 10px;
    background: rgba(0,0,0,0.8);
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .card-info {
    padding: 1.5rem;
  }

  .category-tag {
    color: #3b82f6;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 700;
    display: block;
    margin-bottom: 0.5rem;
  }

  .card-info h3 {
    font-size: 1.25rem;
    color: white;
    font-weight: 600;
    line-height: 1.4;
  }

  /* --- MODAL --- */
  .video-modal {
    position: fixed; top: 0; left: 0; width: 100%; height: 100%;
    z-index: 2000;
    display: flex; align-items: center; justify-content: center;
    opacity: 0; pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .video-modal.active { opacity: 1; pointer-events: all; }

  .modal-backdrop {
    position: absolute; top: 0; left: 0; width: 100%; height: 100%;
    background: rgba(0,0,0,0.9);
    backdrop-filter: blur(10px);
  }

  .modal-container {
    position: relative; z-index: 2001;
    width: 90%; max-width: 1000px;
    background: #151726;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 50px 100px rgba(0,0,0,0.7);
    transform: scale(0.95);
    transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .video-modal.active .modal-container { transform: scale(1); }

  .modal-header {
    display: flex; justify-content: space-between; align-items: center;
    padding: 1.5rem;
    border-bottom: 1px solid rgba(255,255,255,0.1);
  }

  .modal-header h3 { font-size: 1.25rem; font-weight: 600; color: white; }

  .close-btn {
    background: transparent; border: none; color: #94a3b8; font-size: 1.5rem; cursor: pointer;
    transition: color 0.3s ease;
  }
  .close-btn:hover { color: white; }

  .video-wrapper {
    width: 100%;
    aspect-ratio: 16/9;
    background: black;
  }

  .video-wrapper video { width: 100%; height: 100%; }

  /* ANIMATIONS */
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* RESPONSIVE */
  @media (max-width: 768px) {
    .hero-title { font-size: 2.5rem; }
    .gallery-header { flex-direction: column; align-items: flex-start; }
    .filters { width: 100%; overflow-x: auto; padding-bottom: 1rem; }
    .video-grid { grid-template-columns: 1fr; }
  }
</style>

<script is:inline>
  // MODAL LOGIC
  const modal = document.getElementById('videoModal');
  const player = document.getElementById('mainPlayer');
  const modalTitle = document.getElementById('modalTitle');

  // We attach this to window so the HTML onclick works
  window.openVideoModal = (src, title) => {
    modal.classList.add('active');
    modalTitle.innerText = title;
    player.src = src;
    player.play();
    document.body.style.overflow = 'hidden';
  };

  window.closeVideoModal = () => {
    modal.classList.remove('active');
    player.pause();
    player.src = "";
    document.body.style.overflow = '';
  };

  // Close on Escape
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && modal.classList.contains('active')) {
      window.closeVideoModal();
    }
  });

  // FILTER LOGIC
  const filterBtns = document.querySelectorAll('.filter-btn');
  const cards = document.querySelectorAll('.video-card');

  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      // Remove active class
      filterBtns.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      const filter = btn.getAttribute('data-filter');

      cards.forEach(card => {
        if (filter === 'all' || card.getAttribute('data-category').includes(filter)) {
          card.style.display = 'block';
          // Add small fade in animation
          card.style.opacity = '0';
          setTimeout(() => card.style.opacity = '1', 50);
        } else {
          card.style.display = 'none';
        }
      });
    });
  });
</script>