  citations: 4,
  hIndex: 1,
  i10Index: 0
};

const publications = [
  {
    title: "SM-NMPC: Sliding Mode-Based Nonlinear Model Predictive Control for UAVs under Degraded Motor on Microcontrollers",
    authors: "AD Nguyen, P Walunj, C Le, HM La",
    venue: "IEEE Robotics and Automation Letters (RA-L)",
    year: "2025",
    citations: 1,
    tags: ["UAV Control", "Nonlinear MPC", "Embedded Systems"],
    link: "https://scholar.google.com/citations?view_op=view_citation&hl=en&user=iExhIXwAAAAJ&citation_for_view=iExhIXwAAAAJ:2osOgNQ5qMEC"
  },
  {
    title: "A Multi-model Fusion of LIDAR-inertial Odometry via Localization and Mapping",
    authors: "AD Nguyen, CP Le, P Walunj, A Netchaev, TN Do, HM La",
    venue: "IEEE/RSJ International Conference on Intelligent Robots and Systems (IROS)",
    year: "2024",
    citations: 2,
    tags: ["SLAM", "Lidar Fusion", "Localization"],
    link: "https://scholar.google.com/citations?view_op=view_citation&hl=en&user=iExhIXwAAAAJ&citation_for_view=iExhIXwAAAAJ:u-x6o8ySG0sC"
  },
  {
    title: "CAIS: Culvert Autonomous Inspection Robotic System",
    authors: "CP Le, P Walunj, AD Nguyen, Y Zhou, B Nguyen, T Nguyen...",
    venue: "IEEE/RSJ International Conference on Intelligent Robots and Systems (IROS)",
    year: "2024",
    citations: 1,
    tags: ["Field Robotics", "Autonomous Inspection", "System Integration"],
    link: "https://scholar.google.com/citations?view_op=view_citation&hl=en&user=iExhIXwAAAAJ&citation_for_view=iExhIXwAAAAJ:d1gkVwhDpl0C"
  },
  {
    title: "AI-based Office Assisting Robot",
    authors: "M Salunke, P Walunj, A Pailwan, S Ginivar",
    venue: "Grenze International Journal of Engineering & Technology (GIJET)",
    year: "2022",
    citations: 0,
    tags: ["Service Robots", "AI", "HRI"],
    link: "https://scholar.google.com/citations?view_op=view_citation&hl=en&user=iExhIXwAAAAJ&citation_for_view=iExhIXwAAAAJ:u5HHmVD_uO8C"
  }
];
---

<section id="publications" class="publications-section">
  <div class="container">
    
    <div class="section-header">
      <h2 class="section-title">Research Publications</h2>
      <p class="section-subtitle">Peer-reviewed contributions in Robotics, Control Systems, and SLAM.</p>
      <div class="title-line"></div>
    </div>

    <div class="metrics-container">
      <div class="metric-item">
        <span class="metric-value">{metrics.citations}</span>
        <span class="metric-label">Total Citations</span>
      </div>
      <div class="metric-divider"></div>
      <div class="metric-item">
        <span class="metric-value">{metrics.hIndex}</span>
        <span class="metric-label">h-index</span>
      </div>
      <div class="metric-divider"></div>
      <a href={scholarProfile} target="_blank" rel="noopener noreferrer" class="scholar-btn">
        <span class="scholar-icon">üéì</span> View Google Scholar
      </a>
    </div>

    <div class="pub-grid">
      {publications.map((pub) => (
        <a href={pub.link} target="_blank" rel="noopener noreferrer" class="pub-card">
          <div class="pub-year">{pub.year}</div>
          <div class="pub-content">
            <h3 class="pub-title">{pub.title}</h3>
            <p class="pub-authors">{pub.authors}</p>
            <div class="pub-venue">
              <span class="venue-icon">üèõÔ∏è</span>
              {pub.venue}
            </div>
            <div class="pub-footer">
              <div class="pub-tags">
                {pub.tags.map(tag => (
                  <span class="pub-tag">{tag}</span>
                ))}
              </div>
              {pub.citations > 0 && (
                <div class="citation-badge">
                  <span>Cited by {pub.citations}</span>
                </div>
              )}
            </div>
          </div>
          <div class="pub-arrow">‚Üí</div>
        </a>
      ))}
    </div>

  </div>
</section>

<style>
  /* Base Layout */
  .publications-section {
    padding: 6rem 0;
    background: #0a0a0a; /* Matches your dark theme */
    position: relative;
  }

  .container {
    max-width: 1000px; /* Slightly narrower for readability */
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Header */
  .section-header { text-align: center; margin-bottom: 3rem; }
  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: white;
    margin-bottom: 0.5rem;
  }
  .section-subtitle { color: #94a3b8; font-size: 1.1rem; }
  .title-line {
    width: 60px; height: 4px; background: #3b82f6; margin: 1.5rem auto; border-radius: 2px;
  }

  /* Metrics Bar */
  .metrics-container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    margin-bottom: 4rem;
    background: rgba(255,255,255,0.03);
    padding: 1.5rem;
    border-radius: 1rem;
    border: 1px solid rgba(255,255,255,0.1);
    backdrop-filter: blur(10px);
  }

  .metric-item { text-align: center; }
  .metric-value { display: block; font-size: 2rem; font-weight: 700; color: #3b82f6; line-height: 1; }
  .metric-label { font-size: 0.85rem; color: #94a3b8; text-transform: uppercase; letter-spacing: 0.05em; }
  .metric-divider { width: 1px; height: 40px; background: rgba(255,255,255,0.1); }

  .scholar-btn {
    display: flex; align-items: center; gap: 0.5rem;
    background: rgba(59, 130, 246, 0.1); color: #60a5fa;
    padding: 0.75rem 1.25rem; border-radius: 0.5rem;
    text-decoration: none; font-weight: 600; font-size: 0.9rem;
    transition: all 0.3s ease; border: 1px solid rgba(59, 130, 246, 0.2);
  }
  .scholar-btn:hover { background: rgba(59, 130, 246, 0.2); transform: translateY(-2px); }

  /* Publications Grid */
  .pub-grid { display: flex; flex-direction: column; gap: 1.5rem; }

  .pub-card {
    display: grid;
    grid-template-columns: 80px 1fr auto;
    gap: 1.5rem;
    background: rgba(255,255,255,0.02);
    border: 1px solid rgba(255,255,255,0.05);
    padding: 2rem;
    border-radius: 1rem;
    text-decoration: none;
    transition: all 0.3s ease;
    align-items: start;
  }

  .pub-card:hover {
    background: rgba(255,255,255,0.04);
    border-color: #3b82f6;
    transform: translateX(5px);
  }

  .pub-year {
    font-size: 1.5rem;
    font-weight: 800;
    color: rgba(255,255,255,0.1);
    line-height: 1;
  }
  .pub-card:hover .pub-year { color: #3b82f6; }

  .pub-content { flex: 1; }
  
  .pub-title {
    font-size: 1.2rem;
    color: #f1f5f9;
    margin: 0 0 0.5rem 0;
    line-height: 1.4;
  }
  
  .pub-authors {
    color: #94a3b8;
    font-size: 0.95rem;
    margin-bottom: 1rem;
  }

  .pub-venue {
    display: flex; align-items: center; gap: 0.5rem;
    font-style: italic; color: #cbd5e1; font-size: 0.9rem; margin-bottom: 1rem;
  }

  .pub-footer { display: flex; align-items: center; justify-content: space-between; flex-wrap: wrap; gap: 1rem; }

  .pub-tags { display: flex; gap: 0.5rem; flex-wrap: wrap; }
  .pub-tag {
    font-size: 0.75rem; color: #93c5fd; background: rgba(59, 130, 246, 0.1);
    padding: 0.25rem 0.6rem; border-radius: 4px;
  }

  .citation-badge {
    font-size: 0.8rem; color: #fbbf24; font-weight: 600;
    background: rgba(251, 191, 36, 0.1); padding: 0.25rem 0.6rem; border-radius: 4px;
  }

  .pub-arrow {
    font-size: 1.5rem; color: #3b82f6; opacity: 0; transform: translateX(-10px);
    transition: all 0.3s ease; align-self: center;
  }
  .pub-card:hover .pub-arrow { opacity: 1; transform: translateX(0); }

  /* Responsive */
  @media (max-width: 768px) {
    .metrics-container { flex-direction: column; gap: 1rem; }
    .metric-divider { display: none; }
    
    .pub-card { grid-template-columns: 1fr; gap: 1rem; }
    .pub-year { font-size: 1rem; color: #3b82f6; margin-bottom: 0.2rem; }
    .pub-arrow { display: none; }
  }
</style>